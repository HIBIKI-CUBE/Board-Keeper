generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Boards {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  name       String   @default("")
  Lanes      Lanes[]
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Durations {
  id         BigInt    @id @default(autoincrement())
  created_at DateTime  @default(now()) @db.Timestamptz(6)
  started_at DateTime  @default(now()) @db.Timestamptz(6)
  stopped_at DateTime? @db.Timestamptz(6)
  item_id    BigInt?
  Items      Items?    @relation(fields: [item_id], references: [id], onDelete: Cascade, map: "public_Durations_item_id_fkey")
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Items {
  id         BigInt      @id @default(autoincrement())
  created_at DateTime    @default(now()) @db.Timestamptz(6)
  name       String      @default("task")
  deadline   DateTime?   @db.Timestamptz(6)
  lane_id    BigInt?
  Durations  Durations[]
  Lanes      Lanes?      @relation(fields: [lane_id], references: [id], onDelete: Cascade, map: "public_Items_lane_id_fkey")
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Lanes {
  id         BigInt   @id @default(autoincrement())
  created_at DateTime @default(now()) @db.Timestamptz(6)
  name       String   @default("")
  board_id   BigInt?
  Items      Items[]
  Boards     Boards?  @relation(fields: [board_id], references: [id], onDelete: Cascade, map: "public_Lanes_board_id_fkey")
}
